{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Execution Plan",
  "description": "Schema for defining execution plans in Nebula platform",
  "type": "object",
  "required": ["planId", "version", "metadata", "executionFlow", "humanInTheLoop"],
  "properties": {
    "planId": {
      "type": "string",
      "description": "Unique identifier for the execution plan",
      "pattern": "^[a-zA-Z0-9-]+$"
    },
    "version": {
      "type": "string",
      "description": "Version of the execution plan",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "example": "1.0.0"
    },
    "metadata": {
      "type": "object",
      "required": ["name", "description", "createdBy", "createdAt"],
      "properties": {
        "name": {"type": "string", "description": "Name of the execution plan"},
        "description": {"type": "string", "description": "Detailed description"},
        "createdBy": {"type": "string", "description": "Creator identifier"},
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "estimatedDuration": {
          "type": "string",
          "description": "Estimated duration"
        },
        "tags": {
          "type": "array",
          "items": {"type": "string"},
          "default": []
        }
      }
    },
    "agents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["agentId", "name", "type", "config"],
        "properties": {
          "agentId": {"type": "string"},
          "name": {"type": "string"},
          "type": {"type": "string"},
          "config": {
            "type": "object",
            "required": ["language", "capabilities"],
            "properties": {
              "language": {"type": "string"},
              "capabilities": {
                "type": "array",
                "items": {"type": "string"}
              }
            }
          }
        }
      },
      "default": []
    },
    "executionFlow": {
      "type": "object",
      "required": ["startAt", "steps"],
      "properties": {
        "startAt": {"type": "string"},
        "steps": {
          "type": "object",
          "properties": {
            "exampleStep": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["task", "sequence"]
                },
                "agentId": {
                  "type": "string",
                  "description": "ID of the agent to execute this step"
                },
                "next": {
                  "type": "string",
                  "description": "Next step to execute after this one"
                },
                "end": {
                  "type": "boolean",
                  "default": false,
                  "description": "If true, this step ends the execution"
                },
                "parameters": {
                  "type": "object",
                  "properties": {
                    "_": { "type": "string" }
                  },
                  "description": "Parameters specific to the task"
                },
                "steps": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["stepId", "agentId"],
                    "properties": {
                      "stepId": {
                        "type": "string",
                        "description": "Unique identifier for this step in the sequence"
                      },
                      "agentId": {
                        "type": "string",
                        "description": "ID of the agent to execute this step"
                      },
                      "parameters": {
                        "type": "object",
                        "properties": {
                          "_": { "type": "string" }
                        },
                        "description": "Parameters for this step"
                      }
                    }
                  },
                  "description": "Array of steps for sequence type"
                }
              },
              "required": ["type"],
              "oneOf": [
                {
                  "properties": {
                    "type": {"const": "task"},
                    "agentId": {"type": "string"}
                  },
                  "required": ["agentId"]
                },
                {
                  "properties": {
                    "type": {"const": "sequence"},
                    "steps": {
                      "type": "array",
                      "minItems": 1
                    }
                  },
                  "required": ["steps"]
                }
              ]
            }
          }
        }
      }
    },
    "sharedContext": {
      "type": "object",
      "default": {},
      "properties": {
        "variables": {
          "type": "object",
          "default": {},
          "additionalProperties": {"type": "string"},
          "properties": {
            "_": { "type": "string" }
          }
        },
        "secrets": {
          "type": "array",
          "default": [],
          "items": {"type": "string"}
        }
      }
    },
    "humanInTheLoop": {
      "type": "object",
      "default": {
        "enabled": false,
        "approvalRequired": [],
        "teamsIntegration": {
          "speechToText": false,
          "textToSpeech": false
        }
      },
      "properties": {
        "enabled": {"type": "boolean"},
        "approvalRequired": {
          "type": "array",
          "items": {"type": "string"}
        },
        "teamsIntegration": {
          "type": "object",
          "properties": {
            "meetingId": {"type": "string"},
            "speechToText": {"type": "boolean"},
            "textToSpeech": {"type": "boolean"}
          }
        }
      }
    }
  }
}
