{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://nebula.futureim.com/schemas/execution-plan.json",
  "title": "Nebula Execution Plan Schema",
  "description": "Schema for defining agent execution plans in Nebula platform",
  "type": "object",
  "required": ["planId", "version", "metadata", "agents", "executionFlow"],
  "properties": {
    "planId": {
      "type": "string",
      "description": "Unique identifier for the execution plan",
      "pattern": "^[a-zA-Z0-9-_]+$"
    },
    "version": {
      "type": "string",
      "description": "Version of the execution plan",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "metadata": {
      "type": "object",
      "required": ["name", "description", "createdBy", "createdAt"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable name for the execution plan"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of what this plan accomplishes"
        },
        "createdBy": {
          "type": "string",
          "description": "LLM or user that created this plan"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when plan was created"
        },
        "estimatedDuration": {
          "type": "string",
          "description": "Estimated execution time (ISO 8601 duration)"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tags for categorizing the execution plan"
        }
      }
    },
    "agents": {
      "type": "array",
      "description": "List of agents required for this execution plan",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["agentId", "name", "type", "language", "capabilities"],
        "properties": {
          "agentId": {
            "type": "string",
            "description": "Unique identifier for the agent",
            "pattern": "^[a-zA-Z0-9-_]+$"
          },
          "name": {
            "type": "string",
            "description": "Human-readable name for the agent"
          },
          "type": {
            "type": "string",
            "enum": ["control", "data", "tool", "human-interface"],
            "description": "Type of agent"
          },
          "language": {
            "type": "string",
            "enum": ["java", "python", "javascript", "typescript", "go", "rust"],
            "description": "Programming language for the agent implementation"
          },
          "capabilities": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of capabilities this agent provides"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of agent IDs this agent depends on"
          },
          "configuration": {
            "type": "object",
            "description": "Agent-specific configuration parameters"
          },
          "tools": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["toolId", "name", "type"],
              "properties": {
                "toolId": {
                  "type": "string",
                  "description": "Unique identifier for the tool"
                },
                "name": {
                  "type": "string",
                  "description": "Human-readable name for the tool"
                },
                "type": {
                  "type": "string",
                  "enum": ["database", "api", "file", "notification", "integration"],
                  "description": "Type of tool"
                },
                "configuration": {
                  "type": "object",
                  "description": "Tool-specific configuration"
                }
              }
            },
            "description": "Tools required by this agent"
          }
        }
      }
    },
    "executionFlow": {
      "type": "object",
      "required": ["type", "steps"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["sequential", "parallel", "conditional", "loop", "hybrid"],
          "description": "Type of execution flow"
        },
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/sequentialStep"
              },
              {
                "$ref": "#/definitions/parallelStep"
              },
              {
                "$ref": "#/definitions/conditionalStep"
              },
              {
                "$ref": "#/definitions/loopStep"
              }
            ]
          }
        },
        "errorHandling": {
          "type": "object",
          "properties": {
            "strategy": {
              "type": "string",
              "enum": ["fail-fast", "continue", "retry", "rollback"],
              "description": "Error handling strategy"
            },
            "maxRetries": {
              "type": "integer",
              "minimum": 0,
              "description": "Maximum number of retries for failed steps"
            },
            "retryDelay": {
              "type": "string",
              "description": "Delay between retries (ISO 8601 duration)"
            }
          }
        }
      }
    },
    "sharedContext": {
      "type": "object",
      "description": "Shared context and variables available to all agents",
      "properties": {
        "variables": {
          "type": "object",
          "description": "Global variables accessible by all agents"
        },
        "secrets": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of secret keys that agents can access"
        }
      }
    },
    "humanInTheLoop": {
      "type": "object",
      "description": "Configuration for human interaction",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether human interaction is enabled"
        },
        "approvalRequired": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of step IDs that require human approval"
        },
        "teamsIntegration": {
          "type": "object",
          "properties": {
            "meetingId": {
              "type": "string",
              "description": "Microsoft Teams meeting ID"
            },
            "speechToText": {
              "type": "boolean",
              "description": "Enable speech-to-text conversion"
            },
            "textToSpeech": {
              "type": "boolean",
              "description": "Enable text-to-speech conversion"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "sequentialStep": {
      "type": "object",
      "required": ["stepId", "type", "agentId"],
      "properties": {
        "stepId": {
          "type": "string",
          "description": "Unique identifier for the step"
        },
        "type": {
          "type": "string",
          "const": "sequential"
        },
        "agentId": {
          "type": "string",
          "description": "ID of the agent to execute"
        },
        "name": {
          "type": "string",
          "description": "Human-readable name for the step"
        },
        "description": {
          "type": "string",
          "description": "Description of what this step does"
        },
        "timeout": {
          "type": "string",
          "description": "Maximum execution time (ISO 8601 duration)"
        },
        "inputs": {
          "type": "object",
          "description": "Input parameters for the agent"
        },
        "outputs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Expected output variables"
        }
      }
    },
    "parallelStep": {
      "type": "object",
      "required": ["stepId", "type", "parallelAgents"],
      "properties": {
        "stepId": {
          "type": "string",
          "description": "Unique identifier for the step"
        },
        "type": {
          "type": "string",
          "const": "parallel"
        },
        "name": {
          "type": "string",
          "description": "Human-readable name for the step"
        },
        "description": {
          "type": "string",
          "description": "Description of what this step does"
        },
        "parallelAgents": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "required": ["agentId"],
            "properties": {
              "agentId": {
                "type": "string",
                "description": "ID of the agent to execute in parallel"
              },
              "inputs": {
                "type": "object",
                "description": "Input parameters for this agent"
              }
            }
          }
        },
        "waitForAll": {
          "type": "boolean",
          "default": true,
          "description": "Whether to wait for all parallel agents to complete"
        },
        "timeout": {
          "type": "string",
          "description": "Maximum execution time for all parallel agents"
        }
      }
    },
    "conditionalStep": {
      "type": "object",
      "required": ["stepId", "type", "condition", "thenStep"],
      "properties": {
        "stepId": {
          "type": "string",
          "description": "Unique identifier for the step"
        },
        "type": {
          "type": "string",
          "const": "conditional"
        },
        "name": {
          "type": "string",
          "description": "Human-readable name for the step"
        },
        "description": {
          "type": "string",
          "description": "Description of what this step does"
        },
        "condition": {
          "type": "object",
          "required": ["expression"],
          "properties": {
            "expression": {
              "type": "string",
              "description": "Boolean expression to evaluate"
            },
            "variables": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Variables used in the condition"
            }
          }
        },
        "thenStep": {
          "oneOf": [
            {
              "$ref": "#/definitions/sequentialStep"
            },
            {
              "$ref": "#/definitions/parallelStep"
            }
          ]
        },
        "elseStep": {
          "oneOf": [
            {
              "$ref": "#/definitions/sequentialStep"
            },
            {
              "$ref": "#/definitions/parallelStep"
            }
          ]
        }
      }
    },
    "loopStep": {
      "type": "object",
      "required": ["stepId", "type", "loopType", "body", "exitCondition"],
      "properties": {
        "stepId": {
          "type": "string",
          "description": "Unique identifier for the step"
        },
        "type": {
          "type": "string",
          "const": "loop"
        },
        "name": {
          "type": "string",
          "description": "Human-readable name for the step"
        },
        "description": {
          "type": "string",
          "description": "Description of what this step does"
        },
        "loopType": {
          "type": "string",
          "enum": ["while", "for", "foreach"],
          "description": "Type of loop"
        },
        "body": {
          "type": "array",
          "minItems": 1,
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/sequentialStep"
              },
              {
                "$ref": "#/definitions/parallelStep"
              }
            ]
          },
          "description": "Steps to execute in each loop iteration"
        },
        "exitCondition": {
          "type": "object",
          "required": ["expression", "checkAgentId"],
          "properties": {
            "expression": {
              "type": "string",
              "description": "Boolean expression for loop exit condition"
            },
            "checkAgentId": {
              "type": "string",
              "description": "Agent responsible for checking the exit condition"
            },
            "maxIterations": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum number of loop iterations"
            }
          }
        },
        "iterationVariable": {
          "type": "string",
          "description": "Variable name for current iteration (for 'for' loops)"
        },
        "collectionVariable": {
          "type": "string",
          "description": "Variable name for collection to iterate over (for 'foreach' loops)"
        }
      }
    }
  }
}