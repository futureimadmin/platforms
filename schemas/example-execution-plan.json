{
  "planId": "sdlc-automation-plan",
  "version": "1.0.0",
  "metadata": {
    "name": "Software Development Life Cycle Automation",
    "description": "Complete SDLC automation from requirements gathering to deployment",
    "createdBy": "Gemini-LLM",
    "createdAt": "2024-12-14T05:58:00Z",
    "estimatedDuration": "PT2H30M",
    "tags": ["sdlc", "automation", "development", "deployment"]
  },
  "agents": [
    {
      "agentId": "requirements-agent",
      "name": "Requirements Gathering Agent",
      "type": "data",
      "language": "java",
      "capabilities": ["requirements-analysis", "stakeholder-communication", "documentation"],
      "dependencies": [],
      "configuration": {
        "analysisDepth": "detailed",
        "stakeholderTypes": ["business", "technical", "end-user"]
      },
      "tools": [
        {
          "toolId": "document-generator",
          "name": "Document Generator",
          "type": "file",
          "configuration": {
            "outputFormat": "markdown",
            "templatePath": "/templates/requirements.md"
          }
        }
      ]
    },
    {
      "agentId": "design-agent",
      "name": "System Design Agent",
      "type": "data",
      "language": "java",
      "capabilities": ["architecture-design", "database-design", "api-design"],
      "dependencies": ["requirements-agent"],
      "configuration": {
        "designPatterns": ["microservices", "event-driven"],
        "technologies": ["spring-boot", "postgresql", "redis"]
      },
      "tools": [
        {
          "toolId": "diagram-generator",
          "name": "Architecture Diagram Generator",
          "type": "file",
          "configuration": {
            "diagramType": "uml",
            "outputFormat": "svg"
          }
        }
      ]
    },
    {
      "agentId": "coding-agent",
      "name": "Code Generation Agent",
      "type": "data",
      "language": "java",
      "capabilities": ["code-generation", "unit-testing", "code-review"],
      "dependencies": ["design-agent"],
      "configuration": {
        "codeStyle": "google-java-format",
        "testFramework": "junit5",
        "coverageThreshold": 80
      },
      "tools": [
        {
          "toolId": "git-integration",
          "name": "Git Integration Tool",
          "type": "integration",
          "configuration": {
            "repository": "github",
            "branchStrategy": "feature-branch"
          }
        }
      ]
    },
    {
      "agentId": "testing-agent",
      "name": "Automated Testing Agent",
      "type": "data",
      "language": "java",
      "capabilities": ["unit-testing", "integration-testing", "performance-testing"],
      "dependencies": ["coding-agent"],
      "configuration": {
        "testTypes": ["unit", "integration", "e2e"],
        "performanceThresholds": {
          "responseTime": "200ms",
          "throughput": "1000rps"
        }
      },
      "tools": [
        {
          "toolId": "test-runner",
          "name": "Test Execution Tool",
          "type": "integration",
          "configuration": {
            "framework": "maven-surefire",
            "parallelExecution": true
          }
        }
      ]
    },
    {
      "agentId": "deployment-agent",
      "name": "Deployment Automation Agent",
      "type": "data",
      "language": "java",
      "capabilities": ["ci-cd", "containerization", "cloud-deployment"],
      "dependencies": ["testing-agent"],
      "configuration": {
        "platform": "gcp",
        "containerRuntime": "docker",
        "deploymentStrategy": "blue-green"
      },
      "tools": [
        {
          "toolId": "gcp-deployer",
          "name": "GCP Deployment Tool",
          "type": "integration",
          "configuration": {
            "project": "intelligentmachines",
            "service": "cloud-run"
          }
        }
      ]
    },
    {
      "agentId": "human-reviewer",
      "name": "Human Review Interface",
      "type": "human-interface",
      "language": "java",
      "capabilities": ["approval-workflow", "feedback-collection", "decision-making"],
      "dependencies": [],
      "configuration": {
        "approvalTimeout": "PT24H",
        "escalationRules": ["manager", "tech-lead"]
      },
      "tools": [
        {
          "toolId": "teams-integration",
          "name": "Microsoft Teams Integration",
          "type": "notification",
          "configuration": {
            "webhookUrl": "${TEAMS_WEBHOOK_URL}",
            "speechToText": true,
            "textToSpeech": true
          }
        }
      ]
    }
  ],
  "executionFlow": {
    "type": "hybrid",
    "steps": [
      {
        "stepId": "requirements-gathering",
        "type": "sequential",
        "agentId": "requirements-agent",
        "name": "Gather Requirements",
        "description": "Analyze and document system requirements",
        "timeout": "PT30M",
        "inputs": {
          "projectDescription": "${PROJECT_DESCRIPTION}",
          "stakeholders": "${STAKEHOLDER_LIST}"
        },
        "outputs": ["requirements-document", "acceptance-criteria"]
      },
      {
        "stepId": "human-requirements-review",
        "type": "sequential",
        "agentId": "human-reviewer",
        "name": "Human Requirements Review",
        "description": "Human review and approval of requirements",
        "timeout": "PT24H",
        "inputs": {
          "requirementsDocument": "${requirements-document}"
        },
        "outputs": ["requirements-approved"]
      },
      {
        "stepId": "design-and-code-parallel",
        "type": "parallel",
        "name": "Design and Initial Code Structure",
        "description": "Parallel execution of design and basic code structure",
        "parallelAgents": [
          {
            "agentId": "design-agent",
            "inputs": {
              "requirements": "${requirements-document}"
            }
          },
          {
            "agentId": "coding-agent",
            "inputs": {
              "requirements": "${requirements-document}",
              "mode": "scaffold"
            }
          }
        ],
        "waitForAll": true,
        "timeout": "PT45M"
      },
      {
        "stepId": "development-loop",
        "type": "loop",
        "name": "Development Iteration Loop",
        "description": "Iterative development with testing",
        "loopType": "while",
        "body": [
          {
            "stepId": "code-implementation",
            "type": "sequential",
            "agentId": "coding-agent",
            "name": "Implement Features",
            "description": "Implement features based on design",
            "timeout": "PT30M",
            "inputs": {
              "designDocument": "${design-document}",
              "currentIteration": "${iteration-count}"
            },
            "outputs": ["code-changes", "unit-tests"]
          },
          {
            "stepId": "automated-testing",
            "type": "sequential",
            "agentId": "testing-agent",
            "name": "Run Automated Tests",
            "description": "Execute all automated tests",
            "timeout": "PT15M",
            "inputs": {
              "codeChanges": "${code-changes}"
            },
            "outputs": ["test-results", "coverage-report"]
          }
        ],
        "exitCondition": {
          "expression": "test-results.passed == true && coverage-report.percentage >= 80",
          "checkAgentId": "testing-agent",
          "maxIterations": 5
        }
      },
      {
        "stepId": "human-code-review",
        "type": "sequential",
        "agentId": "human-reviewer",
        "name": "Human Code Review",
        "description": "Human review of generated code",
        "timeout": "PT24H",
        "inputs": {
          "codeChanges": "${code-changes}",
          "testResults": "${test-results}"
        },
        "outputs": ["code-approved"]
      },
      {
        "stepId": "conditional-deployment",
        "type": "conditional",
        "name": "Conditional Deployment",
        "description": "Deploy only if all conditions are met",
        "condition": {
          "expression": "code-approved == true && test-results.passed == true",
          "variables": ["code-approved", "test-results"]
        },
        "thenStep": {
          "stepId": "deploy-to-production",
          "type": "sequential",
          "agentId": "deployment-agent",
          "name": "Deploy to Production",
          "description": "Deploy the application to production environment",
          "timeout": "PT20M",
          "inputs": {
            "codeChanges": "${code-changes}",
            "environment": "production"
          },
          "outputs": ["deployment-status", "deployment-url"]
        },
        "elseStep": {
          "stepId": "deployment-failed",
          "type": "sequential",
          "agentId": "human-reviewer",
          "name": "Deployment Blocked",
          "description": "Notify that deployment is blocked due to failed conditions",
          "timeout": "PT5M",
          "inputs": {
            "reason": "Conditions not met for deployment"
          },
          "outputs": ["notification-sent"]
        }
      }
    ],
    "errorHandling": {
      "strategy": "retry",
      "maxRetries": 3,
      "retryDelay": "PT5M"
    }
  },
  "sharedContext": {
    "variables": {
      "PROJECT_NAME": "nebula-demo",
      "ENVIRONMENT": "development",
      "ITERATION_COUNT": 0
    },
    "secrets": [
      "GITHUB_TOKEN",
      "GCP_SERVICE_ACCOUNT_KEY",
      "TEAMS_WEBHOOK_URL",
      "DATABASE_PASSWORD"
    ]
  },
  "humanInTheLoop": {
    "enabled": true,
    "approvalRequired": [
      "human-requirements-review",
      "human-code-review"
    ],
    "teamsIntegration": {
      "meetingId": "${TEAMS_MEETING_ID}",
      "speechToText": true,
      "textToSpeech": true
    }
  }
}